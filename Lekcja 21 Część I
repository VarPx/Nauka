import java.util.ArrayList;
import java.util.Collections;

public class Lekcja21 {
    public static void main(String[] args) {
        //tworzenie listy
        ArrayList<String> lista = new ArrayList<>();
        lista.add("Poznan");
        lista.add("Warszawa");
        lista.add("Gdansk");
        lista.add("Szczecin");

        System.out.println();

        //petla sluzaca do wyswietlania listy
        for(String e : lista){
            System.out.println(e);
        }

        System.out.println();
        //collections.sort - sluzy do sortowania alfabetycznego
        Collections.sort(lista);

        //petla sluzaca do wyswietlania listy
        for(String e : lista){
            System.out.println(e);
        }
        System.out.println();
        System.out.println("Collections.min");
        //Collections.min - zwraca wartosc najmniejsza
        System.out.println(Collections.min(lista));

        System.out.println();
        System.out.println("Collections.max");
        //Collections.max - zwraca wartosc najwieksza
        System.out.println(Collections.max(lista));

        System.out.println();
        System.out.println("Collections.reverse");
        //Collections.reverse - odwraca koeljnosc elementow
        Collections.reverse(lista);
        for(String e : lista){
            System.out.println(e);
        }

        System.out.println();
        System.out.println("Collections.shuffle");
        //Collections.shuffle - przetasowuje caly zbior,
        //czyli randomowo zmienia kolejnosc
        Collections.shuffle(lista);
        for(String e : lista){
            System.out.println(e);
        }

        //sortowanie swojej wlasnej klasy
        ArrayList<Animal> koty = new ArrayList<Animal>();
        Animal kot1 = new Animal("Bury");
        Animal kot2 = new Animal("Czarny");
        Animal kot3 = new Animal("Szary");
        Animal kot4 = new Animal("Bialy");
        Animal kot5 = new Animal("Bialy");
        kot4.wiek = 10;

        //dodanie "kot" do listy
        koty.add(kot1);
        koty.add(kot2);
        koty.add(kot3);
        koty.add(kot4);
        koty.add(kot5);

        //wyswietlanie listy "kot" za pomoca petli
        System.out.println();
        for(Animal kot : koty) {
            System.out.println(kot.name + " " + kot.wiek + " lat.");
        }

        //sortowanie danych listy
        Collections.sort(koty);

        //wyswietlanie listy "kot" za pomoca petli
        System.out.println();
        for(Animal kot : koty) {
            System.out.println(kot.name + " " + kot.wiek + " lat.");
        }
    }
}
