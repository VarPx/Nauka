import java.util.Random;
import java.util.Scanner;

public class Lekcja8 {
    public static void main(String[] args){
        //zmienne
        int i = 0;
        int losowa;
        int odpowiedz;

        //funkcja, która losuje liczby
        Random rnd = new Random();
        losowa = rnd.nextInt(10)+1;

        //obiekt, który pobiera liczbe od użytkownika
        Scanner scanner = new Scanner(System.in);

        //Początek pętli do while
        System.out.println("Podaj liczbe od 1 do 10!");
        do {
            i++;
            System.out.println("Podaj liczbe: ");
            odpowiedz = scanner.nextInt();

            //rozpoczęcie warunku else if
            if(odpowiedz > losowa) {
                System.out.println("Twoja odpowiedz jest wieksza od losu.");
            }
            else if (odpowiedz < losowa){
                System.out.println("Twoja odpowiedz jest mniejsza od losu.");
            }
        //koniec pętli
        }while(odpowiedz != losowa);
        System.out.println("Brawo udalo Ci sie wygrac za " + i + " razem!");

    }
}
