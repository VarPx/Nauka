public class Lekcja13 {
    public static void main(String[] args){
        //zmienne i konwersja jawna float na int
        float a = 7.9f;
        int b = (int)a;

        //konwersja int na String
        String liczba = Integer.toString(b) + "abc";

        int c = 0;

        //zabezpieczenie konwersji
        try {
            c = Integer.parseInt(liczba);
            System.out.println(c + 2);
        }
        //wyświetlenie błędu podczas braku możliwości konwersji
        catch (Exception ex){
            System.out.println("Blad");
        }

        //konwersja Stringa na int
//        int c = Integer.parseInt(liczba);
    }
}
